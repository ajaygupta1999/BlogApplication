<% include ./partials/header %>

<div class="ui main text container segement">
     <div class="ui huge header" id="hederofshow"><%= blog.title %></div>
     <div class="ui top attached">
          <div class="item">
               <img class="ui centered rounded image" src="<%= blog.img %>"> 
               <div class="content">
                  <span></span><%= blog.created.toDateString() %></span>
               </div>
               <div class="description">
                    <p><%- blog.body %></p>
               </div>
          </div>
          <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button type="submit" class="ui red button">Delete Post <i class="fas fa-trash-alt"></i></button> 
            <a href="/blogs/<%= blog._id %>/edit" class="ui primary button"> Edit Post <i class="fas fa-edit"></i></a>
            <a href="<%= blog.infolink %>" class="ui primary button">More Info</a>
            </form>
     </div>
 </div>

 

  
<% include ./partials/footer %>